<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calc_IMC.MainPage"
             Visual="Material">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="300">
            <Label Text="Bienvenidos" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
            <Label Text="Calculadora IMC" HorizontalTextAlignment="Center" FontSize="Title"/>
            <Entry Placeholder="Altura" x:Name="Altura" Keyboard="Numeric"/>
            <Entry Placeholder="Peso" x:Name="Peso" Keyboard="Numeric"/>
            <Entry Placeholder="Tu IMC" x:Name="IMC" IsEnabled="False"/>
            <Button Text="Calcular" Clicked="Button_Clicked" BackgroundColor="DarkMagenta"/>
            <Label Text=""></Label>
        <Button Text="Integrantes" Clicked="Button_Clicked_1" Background="#00FF00"></Button>
    </StackLayout>

</ContentPage>
